install.packages("ggplot2")
library("ggplot2")
ggplot(aes(x=grid, y=h)) + geom_point()
funcion.h <- function(x, a=10, b=15){
if(x < a){
h <- 0
}else if(x >= a & x <= b){
h <- (x - a) / (b - a)
}
else{
h <- 1
}
return(h)
}
grid <- seq(5, 20, 0.1)
h <- rep("NA", length(grid))
for(i in 1:length(grid)){
x <- grid[i]
h[i] <- funcion.h(x)
}
install.packages("ggplot2")
library("ggplot2")
ggplot(aes(x=grid, y=h)) + geom_point()
